---
import MainLayout from "src/layouts/MainLayout.astro";

import post05Img from '@images/post-05.png'
import { Image, Picture } from "astro:assets";

---

<MainLayout title="Imagenes">
    <h1 class="text-5xl text-white">Im√°genes</h1>

    <img 
        src="/assets/images/post-05.png" 
        width="250" 
        height="250"
    />
    <Image 
        src={post05Img}
        width="250" 
        height="250"
        alt="image-post"

    />
    <h1 class="text-3xl text-white">Quality Image</h1>
    <Image 
    src={post05Img}
    style={{
        width: "250px",
        height: "250px",
    }}
    width="500" 
    height="500"
    alt="image-post"
    quality="low"
    />
    <!--  formats={['webp', 'avif', 'jpeg']} 
     
    widths={[240, 540, 720, post05Img.width]}
    sizes={`(max-width: 360px) 240px, (max-width: 720px) 540px, (max-width: 1600px) 720px, ${post05Img.width}px`}
    -->

    <h1 class="text-3xl text-white">Picture</h1>
    <Picture
    src={post05Img}
    
    width={post05Img.width / 2}
    densities={[1.5, 2]}
    width="250"
    height="250"
    alt="image-post"
    quality="low"
    />
</MainLayout>