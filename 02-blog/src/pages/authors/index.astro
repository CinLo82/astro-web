---
import MainLayout from "@layouts/MainLayout.astro";
import { siteConfig } from '../../config/site-config';
import AuthorCard from '@components/AuthorCard.astro';
import { getCollection } from "astro:content";

const authors = await getCollection('author');

---

<MainLayout title="Listado de autores">
 
    
        <!--Author Card -->
        <section class="container px-6 py-10 mx-auto bg-white dark:bg-gray-900">
            <h1 class="text-3xl font-semibold text-gray-800 lg:text-4xl dark:text-white">
                {siteConfig.title}
            </h1>
        </section>
            
        <section class="grid grid-cols-1 sm:grid-cols-2 gap-2">
            {
                authors.map(author => (
                <AuthorCard author={author} 
                />
                ))
            }
        </section>
</MainLayout>